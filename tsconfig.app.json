{
  
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",  // "bundler" should work with Vite
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",  // Use JSX syntax with React

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,

    /* Base URL and Path Aliases */
    "baseUrl": ".",  // The base URL is set to the root directory
    "paths": {
      "@/*": ["./src/*"]  // Alias @ for src directory
    }
  },
  "include": ["src"]  // Include everything in the src folder
}
